@model IEnumerable<Clinic.Models.Doctor>

<div class="container">
    <h3 style="display:inline-block !important">Doctors</h3>
    <a href="@Url.Action("Add","Doctors")" class="btn btn-success btn-sm float-right mb-2 mt-1">Add doctor</a>
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
    <table class="table table-bordered mt-4 shadow">
        <thead>
            <tr class="text-center">
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Title
                </th>
                <th>
                   License number
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.LicenseNumber
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Doctors", new { id = item.Id })" class="btn btn-sm btn-primary mr-1">Edit</a>
                    <a href="@Url.Action("Delete", "Doctors", new {id=item.Id})" class="btn btn-sm btn-danger ml-1">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
    }
            else
            {
                <h3 class="text-center">No records found</h3>
            }
</div>
