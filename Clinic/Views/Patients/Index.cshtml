@model IEnumerable<Clinic.Models.Patient>

<div class="container">
    <h3 class="" style="display:inline-block !important">Patients</h3>
    <a href="@Url.Action("Add","Patients")" class="btn btn-success btn-sm float-right mb-2 mt-1 shadow-sm">Add patient</a>
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
    <table class="table table-bordered mt-4 shadow">
        <thead>
            <tr class="text-center">
                <th>
                    First name
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Gender
                </th>
                <th>
                   Date of birth
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone number
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.DateOfBirth
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Patients", new { id = item.Id })" class="btn btn-sm btn-primary mr-1">Edit</a>
                    <a href="@Url.Action("Delete", "Patients", new {id=item.Id})" class="btn btn-sm btn-danger ml-1">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
    }
            else
            {
                <h3 class="text-center">No records found</h3>
            }
</div>
