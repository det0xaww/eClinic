@model Clinic.ViewModels.PatientMedicalReportViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h3>Edit medical report</h3>
    @Html.ValidationSummary(false, "", new { @class = "text-danger text-center" })
    <form method="post" asp-action="Edit" asp-controller="PatientMedicalReports">
        <input hidden asp-for="PatientReceptionsId" />
        <div class="row shadow">
            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                <label>Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col form-group">
                <input class="btn btn-success float-right ml-1 shadow-sm" type="submit" value="Save" />
                <a class="btn btn-primary float-right mr-1 shadow-sm" href="@Url.Action("Index","PatientMedicalReports",new { id = Model.PatientReceptionsId})">Back</a>
            </div>
        </div>
    </form>
</div>

